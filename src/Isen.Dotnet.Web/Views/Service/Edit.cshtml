@{
    ViewData["Title"] = "Edition d'un service";
}
@using Isen.Dotnet.Library.Model;
@using Isen.Dotnet.Library.Context;
@model Service;
@inject ApplicationDbContext _context;

<h2>Création ou édition <small>d'un service</small></h2>
<form class="form-group" asp-action="Edit">

    <h3>Identité <small>du service</small></h3>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Nom">Nom</label>
                <input
                    id="Nom"
                    type="text"
                    class="form-control"
                    placeholder="Nom"
                    asp-for="Nom"
                    value="@Model?.Nom" />
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Valider</button>
                <a class="btn btn-secondary" asp-action="Index">Annuler</a>
            </div>
        </div>
    </div>

</form>        
