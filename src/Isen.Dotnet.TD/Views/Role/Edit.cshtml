@{
    ViewData["Title"] = "Edition d'un role";
}
@using Isen.Dotnet.Library.Model;
@using Isen.Dotnet.Library.Context;
@model Role;
@inject ApplicationDbContext _context;

<h2>Création ou édition <small>d'un role</small></h2>
<form class="form-group" asp-action="Edit">

    <h3>Identité <small>du role</small></h3>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Nom">Nom</label>
                <input
                    id="Nom"
                    type="text"
                    class="form-control"
                    placeholder="Nom"
                    asp-for="Nom"
                    value="@Model?.Nom" />
            </div>
        </div>
    </div>

    <h3>Personne <small>du role </small></h3>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Personne">Personne</label>
                @Html.DropDownListFor(
                    // Quel est le champ du modèle que l'on 
                    // met à jour avec cette liste ?
                    p => p.Id,
                    // Liste des éléments
                    new SelectList(
                        // La liste
                        _context.PersonneCollection,
                        // Le champ d'id
                        "Id",
                        // Le champ de libellé
                        "Nom",
                        "Prenom",
                        "DateDeNaissance"
                    ),
                    // Item par défaut
                    "Sélectionnez une personne...",
                    // Classe CSS
                    new { @class = "form-control" }
                )
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Valider</button>
                <a class="btn btn-secondary" asp-action="Index">Annuler</a>
            </div>
        </div>
    </div>

</form>        
